  cout << "76.1 \n";
  ifstream plik("szyfr1.txt");
  string tab[6];
  int klucz[50];
  
  for (int i = 0; i < 6; i++) 
  {
  	plik >> tab[i];
  }
  for (int i = 0; i < 50; i++)
  {
  	plik >> klucz[i];
  } 
  
  for (int i = 0; i < 6; i++) 
  {
  	cout << szyfrowanie(tab[i], klucz, 50) << endl;
  }
  cout << endl;
}

