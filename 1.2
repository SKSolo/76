#include <iostream>
#include <fstream>
using namespace std;


string szyfrowanie(string s, int klucz[], int keyLen) {
  char temp;
  int key = 0;
  
  for (int i = 0; i < s.length(); i++)
   {
    temp = s[i];
    s[i] = s[klucz[key] - 1];
    s[klucz[key] - 1] = temp;
    key++;
    
    if (key == keyLen)
	{
		key = 0;	
	} 
  }
  return s;
}

